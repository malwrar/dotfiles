! extensions
!URxvt.perl-lib:        ~/.urxvt/extensions/urxvt-perls
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,font-size,matcher

! URL opening
URxvt.url-launcher:   /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg4

! Fonts
URxvt.font:     xft:DejaVuSansMono:pixelsize=12:antialias=true:hinting=true
URxvt.boldFont: xft:DejaVuSansMono:bold:pixelsize=12:antialias=true:hinting=true

!URxvt*imFont: xft:DejaVu Sans Mono:regular:pixelsize=16:antialias=true:hinting:true
!URxvt*boldFont: xft:DejaVu Sans Mono:bold:pixelsize=16:antialias=true:hinting:true
!URxvt*italicFont: xft:DejaVu Sans Mono:italic:pixelsize=16:antialias=true:hinting:true
!URxvt*boldItalicFont: xft:DejaVu Sans Mono:bold:italic:pixelsize=16:antialias=true:hinting:true

! Fix font space
!URxvt*letterSpace: -2

! Xft settings
Xft.dpi:       {{ dpi }}
